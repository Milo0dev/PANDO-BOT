                        if (valueSpan) {
                            const icon = valueSpan.querySelector('i') ? valueSpan.querySelector('i').outerHTML + ' ' : '';
                            valueSpan.innerHTML = icon + text;
                        }

                        // Update selected class
                        const options = select.querySelectorAll('.visual-select-option');
