                if (input && display && input.value) {
                    // For now, just show the ID - in a real implementation you'd fetch channel names
                    display.textContent = input.value;
                    display.classList.remove('placeholder');
                }
            });
        }

        // Update loadSettings to initialize custom dropdowns
        const originalLoadSettings2 = loadSettings;
        loadSettings = async function(guildId) {
            await originalLoadSettings2(guildId);
            initCustomDropdowns();
        };
