        // ===== CUSTOM CHANNEL DROPDOWN FUNCTIONS =====
        async function loadCustomChannelDropdowns(guildId) {
            try {
                const response = await fetch('/api/channels/' + guildId);
                const data = await response.json();
                const channels = data.channels || [];

                // Map of dropdown IDs to their corresponding input and display IDs
                const dropdownMappings = {
                    'log_channel_dropdown': { input: 'log_channel', display: 'log_channel_display' },
                    'transcript_channel_dropdown': { input: 'transcript_channel', display: 'transcript_channel_display' },
                    'dashboard_channel_dropdown': { input: 'dashboard_channel', display: 'dashboard_channel_display' },
                    'weekly_report_channel_dropdown': { input: 'weekly_report_channel', display: 'weekly_report_channel_display' },
                    'panel_channel_id_dropdown': { input: 'panel_channel_id', display: 'panel_channel_id_display' }
                };

                Object.keys(dropdownMappings).forEach(dropdownId => {
                    const dropdown = document.getElementById(dropdownId);
                    if (!dropdown) return;

                    const config = dropdownMappings[dropdownId];

                    // Remove existing menu if it exists
                    const existingMenu = dropdown.querySelector('.custom-dropdown-menu');
                    if (existingMenu) existingMenu.remove();

                    // Create new menu container with forced styles
                    const menu = document.createElement('div');
                    menu.style.cssText = "position: absolute; width: 100%; max-height: 250px; overflow-y: auto; background-color: #2b2d31 !important; border: 1px solid #1e1f22 !important; box-shadow: 0px 8px 16px rgba(0,0,0,0.9) !important; z-index: 999999 !important; opacity: 1 !important; margin-top: 5px;";
                    menu.style.setProperty('display', 'none', 'important');
                    dropdown.appendChild(menu);

                    // Add "Ninguno" option
                    const noneOption = document.createElement('div');
                    noneOption.className = 'custom-dropdown-option none';
                    noneOption.onclick = () => selectCustomChannel(config.input, '', 'Seleccionar canal...');
                    noneOption.innerHTML = `
                        <span class="option-icon"><i class="fas fa-times-circle"></i></span>
                        <span class="option-name">Ninguno</span>
                    `;
                    menu.appendChild(noneOption);

                    // Group channels by categories
                    const categories = {};
                    const noCategory = [];

                    channels.forEach(channel => {
                        if (channel.type === 0) { // Only text channels
                            if (channel.parentId && categories[channel.parentId]) {
                                categories[channel.parentId].channels.push(channel);
                            } else {
                                noCategory.push(channel);
                            }
                        } else if (channel.type === 4) { // Category
                            categories[channel.id] = { name: channel.name, channels: [] };
                        }
                    });

                    // Add categorized channels
                    Object.values(categories).forEach(cat => {
                        if (cat.channels.length > 0) {
                            const catHeader = document.createElement('div');
                            catHeader.className = 'custom-dropdown-category';
                            catHeader.innerHTML = '<i class="fas fa-folder"></i> ' + cat.name;
                            menu.appendChild(catHeader);

                            cat.channels.forEach(channel => {
                                const option = document.createElement('div');
                                option.className = 'custom-dropdown-option';
                                option.onclick = () => selectCustomChannel(config.input, channel.id, '#' + channel.name);
                                option.innerHTML = `
                                    <span class="option-icon"><i class="fas fa-hashtag"></i></span>
                                    <span class="option-name">${channel.name}</span>
                                `;
                                menu.appendChild(option);
                            });
                        }
                    });

                    // Add uncategorized channels
                    noCategory.forEach(channel => {
                        const option = document.createElement('div');
                        option.className = 'custom-dropdown-option';
                        option.onclick = () => selectCustomChannel(config.input, channel.id, '#' + channel.name);
                        option.innerHTML = `
                            <span class="option-icon"><i class="fas fa-hashtag"></i></span>
                            <span class="option-name">${channel.name}</span>
                        `;
                        menu.appendChild(option);
                    });
                });
            } catch (error) {
                console.error('Error loading custom channel dropdowns:', error);
            }
        }

        function toggleCustomDropdown(dropdownId, event) {
            // Prevent event propagation if provided
            if (event) {
                event.stopPropagation();
            }
            
            // Close other custom dropdowns
            document.querySelectorAll('.custom-dropdown-menu.show').forEach(menu => {
                if (menu.closest('.custom-dropdown').id !== dropdownId) {
                    menu.classList.remove('show');
                }
            });

            // Toggle the clicked dropdown
            const dropdown = document.getElementById(dropdownId);
            if (dropdown) {
                const menu = dropdown.querySelector('.custom-dropdown-menu');
                if (menu) {
                    menu.classList.toggle('show');
                }
            }
        }

        function selectCustomChannel(inputId, channelId, channelName) {
            const input = document.getElementById(inputId);
            const display = document.getElementById(inputId + '_display');
            const dropdown = document.getElementById(inputId + '_dropdown');

            if (input) input.value = channelId || '';
            if (display) {
                display.textContent = channelName || 'Seleccionar canal...';
                display.classList.toggle('placeholder', !channelId);
            }

            // Close dropdown
            const menu = dropdown.querySelector('.custom-dropdown-menu');
            if (menu) menu.classList.remove('show');

            // Update selected state
            const options = dropdown.querySelectorAll('.custom-dropdown-option');
            options.forEach(opt => opt.classList.remove('selected'));
            if (channelId) {
                options.forEach(opt => {
                    if (opt.onclick && opt.onclick.toString().includes(channelId)) {
                        opt.classList.add('selected');
                    }
                });
            } else {
                // Select "Ninguno" option
                const noneOption = dropdown.querySelector('.none');
                if (noneOption) noneOption.classList.add('selected');
            }
        }

        // Close custom dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.custom-dropdown')) {
                // Close all open dropdown menus (those with .show class)
                document.querySelectorAll('.custom-dropdown-menu.show').forEach(menu => {
                    menu.classList.remove('show');
                });
            }
        });

        // Initialize custom dropdowns with saved values
        function initCustomDropdowns() {
            const dropdownMappings = {
                'log_channel': 'log_channel_display',
                'transcript_channel': 'transcript_channel_display',
                'dashboard_channel': 'dashboard_channel_display',
                'weekly_report_channel': 'weekly_report_channel_display',
                'panel_channel_id': 'panel_channel_id_display'
